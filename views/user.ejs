<%- include header %>
<% posts.forEach(function(post, index){ %>
<div style="background-color: #ffffff; padding: 10px; margin:10px 0;" class="img-rounded div-list">
<h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" class="title"><%= post.title %></a></h2>
<p class="info">
	作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 
	日期：<%= post.time.minute %> | 
	标签：
	<% post.tags.forEach(function(tag, index) { %>
	<% if(tag) { %>
	<a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
	<% }}) %>
</p>
<div name="div_post"><%- post.post %></div>
<p class="info">阅读：<%= post.pv %> | 评论：<span id = "sourceId::<%= post.name %><%= post.time.day %><%= post.title %>" class = "cy_cmt_count" ></p>
</div>
<% }) %>
<script charset="utf-8" src="/javascripts/cutter.min.js"></script>
<script type="text/javascript">
	var oElements = document.getElementsByName("div_post");
	for (var t=0;t<oElements.length;t++) {
		Cutter.run(oElements[t], oElements[t], 10, {more:"阅读原文"}, {more:"alink"});
	}
</script>
<%- include paging %>
<%- include footer %>